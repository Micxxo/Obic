<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FD"
    tools:context=".fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profiltopcard"
        android:paddingBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:background="#EAFAF6">

        <TextView
            android:id="@+id/profilPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/montserratmedium"
            android:gravity="center"
            android:text="Profil"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardFoto"
        android:layout_width="132dp"
        android:layout_height="126dp"
        app:cardCornerRadius="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp">

        <ImageView
            android:id="@+id/fotoProfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/isan" />
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:layout_below="@+id/cardFoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserratbold"/>


        <ImageView
            android:id="@+id/stars"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_stars_24"
            android:layout_below="@+id/nama"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="28dp"
            android:fontFamily="@font/montserratbold"
            android:layout_below="@+id/stars"/>

      <TextView
          android:id="@+id/lvlDisiplin"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0"
          android:textSize="32dp"
          android:textColor="#819BFC"
          android:fontFamily="@font/montserratbold"
          android:layout_below="@id/nama"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txtLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level Kedisiplinan"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/montserratbold"
            android:layout_below="@+id/lvlDisiplin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>
        
        <ImageView
            android:id="@+id/jadwalDoneLogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_checklist_24"
            android:layout_below="@+id/nama"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            />

        <TextView
            android:id="@+id/jadwalDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/montserratbold"
            android:layout_below="@+id/jadwalDoneLogo"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="28dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="@drawable/profilcardbottom"
        android:layout_below="@+id/topCard"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:textColor="@color/black"
            android:fontFamily="@font/montserratbold"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="16dp"
            android:fontFamily="@font/montserratmedium"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:backgroundTint="#8C8787"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"/>



    </LinearLayout>

    </RelativeLayout>






</FrameLayout>